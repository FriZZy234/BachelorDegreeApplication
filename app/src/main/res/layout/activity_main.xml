<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".MainActivity">

    <!-- App Name TextView in the top left corner -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GGLivestream"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_light"
        android:textColor="@android:color/white"
        android:background="@drawable/bordered_box"/>

    <!-- Sign In with Google TextView in a Box -->
    <TextView
        android:id="@+id/signin_with_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in with Google"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_light"
        android:textColor="@android:color/black"

        android:padding="8dp"/>

    <!-- Google Sign In Button -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin_with_google"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/googleButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/google"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Google Sign-In Button" />
    </FrameLayout>

</RelativeLayout>
